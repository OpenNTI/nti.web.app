{
	"extends": "nti-codestyle-js",
	"parser": "babel-eslint",

	"parserOptions": {
		"sourceType": "script",
		"ecmaFeatures": {
			"impliedStrict": false,
		}
	},

	"globals": {
		"$AppConfig": true,
		"NextThought": true,
		"Service": true,

		"getString": true
	},

	"rules": {
		"no-console": [1, { allow: ["warn", "error"] }],
		"no-undef": 2,
		"no-var": 0,
		"strict": [2, "never"],
	}
}
